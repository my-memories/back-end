#!/usr/bin/env groovy
pipeline {
    agent any
    stages {
        stage('Test') {
            steps {
                withGradle() {
                    sh "./gradlew test"
                }
            }
        }
        stage('Build') {
            steps {
                withGradle() {
                    sh "./gradlew clean build -x test"
                }
            }
        }
    }
}