#!/usr/bin/env groovy
pipeline {
    agent any
    tools {
        gradle '7.6'
    }
    stages {
        stage('Permission gradle') {
            steps {
                echo 'Given all permissions for gradle'
                withGradle() {
                    sh 'chmod 777 ./gradlew'
                }
            }
        }
        stage('Check gradle version') {
            steps {
                echo 'Check gradle version'
                withGradle() {
                    sh './gradlew --version'
                }
            }
        }
        stage('Lint') {
            steps {
                echo 'executing lint format'
                withGradle() {
                    sh './gradlew ktlintFormat'
                }
            }
        }
        stage('Info') {
            step {
                echo 'Starting process info'
                withGradle() {
                    sh(script: "/bin/bash -c './gradlew --info'")
                }
            }
        }
        stage('Build') {
            steps {
                withGradle() {
                    echo 'Executing process to build the application'
                    sh './gradlew assemble'
                }
            }
        }
        stage('Unit tests') {
            steps {
                echo 'Executing unit testing'
                withGradle() {
                    sh './gradlew test --stacktrace'
                }
            }
        }
    }
}