#!/usr/bin/env groovy
pipeline {
    agent any
    stages {
        stage('Check gradle version') {
            steps {
                echo 'Check gradle version'
                withGradle() {
                    sh 'gradle --version'
                }
            }
        }
        stage('Lint') {
            steps {
                echo 'executing lint format'
                withGradle() {
                    sh './gradlew ktlintFormat'
                }
            }
        }
        stage('Build') {
            steps {
                withGradle() {
                    sh './gradlew clean build'
                }
            }
        }
    }
}