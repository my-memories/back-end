#!/usr/bin/env groovy
pipeline {
    agent none
    stages {
        stage('Lint') {
            agent {
                docker { image 'gradle:7.6.0-jdk17-alpine' }
            }
            steps {
                sh "./gradlew ktlintFormat "
            }
        }
        stage('Test') {
            agent {
                docker { image 'gradle:7.6.0-jdk17-alpine' }
            }
            steps {
                sh "./gradlew test"
            }
        }
        stage('Build') {
            agent {
                docker { image 'gradle:7.6.0-jdk17-alpine' }
            }
            steps {
                sh "./gradlew clean build -x test"
            }
        }
    }
}