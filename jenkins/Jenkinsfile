#!/usr/bin/env groovy
pipeline {
    agent any
    stages {
        stage('Check gradle version') {
            steps {
                echo 'Check gradle version'
                withGradle() {
                    sh './gradlew --version'
                }
            }
        }
        stage('Lint') {
            steps {
                echo 'executing lint format'
                withGradle() {
                    sh './gradlew ktlintFormat'
                }
            }
        }
        stage('Build') {
            steps {
                withGradle() {
                    sh './gradlew build -x test --stacktrace'
                }
            }
        }
    }
}